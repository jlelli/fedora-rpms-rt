index 153e12e066c6..ef10a4879b10 100644
--- a/kernel/futex.c
+++ b/kernel/futex.c
@@ -945,7 +945,9 @@ static void exit_pi_state_list(struct task_struct *curr)
 		if (head->next != next) {
 			/* retain curr->pi_lock for the loop invariant */
 			raw_spin_unlock(&pi_state->pi_mutex.wait_lock);
