+#include <linux/blkdev.h>
 
 #include "rtmutex_common.h"
 
@@ -1918,6 +1919,15 @@ rt_mutex_fastlock(struct rt_mutex *lock, int state,
 	if (likely(rt_mutex_cmpxchg_acquire(lock, NULL, current)))
 		return 0;
 
